{
	"functions": {
		"source": "functions",
		"codebase": "default",
		"ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log"],
		"predeploy": ["npm run lint", "npm run build"]
	},
	"hosting": {
		"public": "public",
		"rewrites": [
			{
				"source": "**",
				"function": "sveltekit",
				"dynamicLinks": true
			}
		],
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
	},
	"emulators": {
		"functions": {
			"port": 5001
		},
		"hosting": {
			"port": 5000
		},
		"ui": {
			"enabled": true
		},
		"singleProjectMode": true,
		"auth": {
			"port": 9099
		},
		"firestore": {
			"port": 8080
		}
	}
}
